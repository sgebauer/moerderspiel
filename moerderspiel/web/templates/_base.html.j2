<!DOCTYPE html>

{% from "macros/dialog.html.j2" import dialog %}
{% from "macros/render_field.html.j2" import render_field %}
{% from "macros/icon.html.j2" import icon %}

<html lang="en">
<head>
    <link rel="stylesheet" href="/css/pico.min.css" />
    <link rel="stylesheet" href="/css/moerderspiel.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="light dark" />
    <title>Mörderspiel</title>
    {% block head %}
    {% endblock %}
</head>
<body>
    <header class="container">
        {% block header %}
        <h1><a href="/">Das Mörderspiel</a></h1>
        {% endblock %}
    </header>

    <main class="container">
        {% block main %}
        {% endblock %}
    </main>

    <footer class="container grid">
        <a href="https://github.com/sgebauer/moerderspiel" target="_blank">Quellcode</a>
        <a href="/imprint" target="_blank">Impressum & Datenschutz</a>
    </footer>

    <div id="modals">
        {% block modals %}
        {% endblock %}
    </div>

    <div class="flashes">
        {% for category, message in get_flashed_messages(with_categories=true) %}
        <article class="{{ category }}">{{ message }}</article>
        {% endfor %}
    </div>
</body>
</html>